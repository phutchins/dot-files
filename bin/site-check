#!/bin/bash
site=$1
while [ 1 ]
do
  set -- $(curl -o /dev/null --silent --head --write-out '%{http_code} %{time_total}\n' $site)
  if [[ $1 -eq 200 ]]; then
    printf '.'
  else
    printf "\n$1 - $2"
    echo "$1 - $2" > site-check.errors
  fi
  #if [[ $(($2 * 1)) -gt 3 ]]; then
  #  printf "\n$1 - $2"
  #  echo "$1 - $2" > site-check.errors
  #fi
  sleep 10
done
